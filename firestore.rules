rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Galleries collection - allow anyone to read, restrict writes to authenticated admins
    match /galleries/{gallery} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Existing classData collection - maintain current functionality
    // Allow reads for all users, writes for authenticated users
    match /classData/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Existing shoutouts collection - maintain current functionality
    // Allow reads for all users, writes for authenticated users
    match /shoutouts/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}